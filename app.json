{
  "expo": {
    "name": "Realtime Translation App",
    "slug": "realtime-translation-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#667eea"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to capture speech for real-time translation.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition to convert your speech to text for translation.",
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect with AirPods for optimal audio experience.",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect with AirPods for optimal audio experience."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#667eea"
      },
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "template": "./web/index.html",
      "config": {
        "firebase": {
          "analyticsCollectionEnabled": false
        }
      }
    },
    "plugins": [
      "expo-audio"
    ]
  }
}
